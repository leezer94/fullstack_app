// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash String

  firstName String?
  lastName String?
  bookmarks Bookmark[]
  // with this code above now one user can have many bookmarks


  @@map("users")
}

model Bookmark{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title String
  description String?
  link String


  // with this code below now one user can have many bookmarks
  userId Int
  user User @relation(fields: [userId], references: [id])
  @@map("bookmarks")

}
